<?xml version="1.0" encoding="utf-8"?>
<install type="component" version="1.5.0">
 <name>SphinxSearch</name> 
 <!-- The following elements are optional and free of formatting constraints -->
 <creationDate>2011-04-04</creationDate>
 <author>Ivinco</author>
 <authorEmail>opensource@ivinco.com</authorEmail>
 <authorUrl>http://ivinco.com</authorUrl>
 <copyright>Copyright Info</copyright>
 <license>License Info</license>
 <!--  The version string is recorded in the components table -->
 <version>0.0.1</version>
 <!-- The description is optional and defaults to the name -->
 <description>Description of the component ...</description>

 <!-- Site Main File Copy Section -->
 <!-- Note the folder attribute: This attribute describes the folder
      to copy FROM in the package to install therefore files copied
      in this section are copied from /site/ in the package -->
 <files folder="site">
    <folder>views</folder>
    <folder>models</folder>
    <filename>controller.php</filename>
    <filename>sphinxsearch.php</filename>
    <filename>index.html</filename>
    <filename>router.php</filename>
    <filename>sphinxapi.php</filename>
 </files>

<media destination="com_sphinxsearch">
    <filename>js/sphinxsearch.js</filename>
    <filename>css/sphinxsearch.css</filename>
</media>

 <administration>
    <!-- Administration Menu Section -->
    <menu>Sphinx Search</menu>
    <submenu>
        <menu view="configuration">Configuration</menu>
    </submenu>

    <!-- Administration Main File Copy Section -->
    <files folder="admin">
        <folder>models</folder>
        <folder>views</folder>
        <filename>controller.php</filename>
        <filename>sphinxsearch.php</filename>
        <filename>configuration.php</filename>
        <filename>index.html</filename>
    </files>

</administration>

</install>
